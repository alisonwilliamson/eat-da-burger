<div class="container">

    <div class="jumbotron">
        <h1>Eat Da Burger</h1>
        <br>
        <h2>Enter a Burger You Would Like to Eat</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="addedburger">New Burger:</label>
                    <input type="text" id="addedburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">Submit</button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="readyToEat"><strong>Burgers Ready to Eat!</strong></div>
                <div class="panel-body">
                     <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}">Devour</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="devouredBurgers"><strong>Burgers Devoured!</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="delete-burger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Delete</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

